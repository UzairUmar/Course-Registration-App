<h2>Listing Published Courses</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
		<th>User</th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.code %></td>
    <td><%= if course.users.count > 0 then course.users.alphabetical.first.name else "None" end %></td>
		
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />


<br />

<ul class="options">Switch to:

	<li><%= link_to 'Add a New Course', new_course_path %></li>
</ul>